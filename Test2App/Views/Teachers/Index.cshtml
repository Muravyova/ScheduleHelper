@model IEnumerable<ScheduleHelper.Models.DbModels.Teacher>

@{
    ViewData["Title"] = "Преподаватели";
}
<div id="global-wrapper">
    <p>
        <br />
        <h2>Преподаватели</h2>
        <a asp-action="Create" style="float:left" class="btn btn-default">Добавить</a>
        <a href="javascript:PopUpShow()" class="btn btn-default" id="open__btn">Открыть всплывающее окно</a>
        <br />
        <br />
    </p>

    <ul class="cards">
        @foreach (var item in Model)
        {
            <a asp-action="Details" asp-route-id="@item.Id">
                <li class="cards__item">
                    <div class="card">
                        <div class="card__image card__image--person"></div>
                        <div class="card__content">
                            <a asp-action="Delete" asp-route-id="@item.Id" class="card__btn--dlt">×</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="card__content">
                                <div class="card__title">@Html.DisplayFor(modelItem => item.Name)</div>
                                <div class="card__comment">@Html.DisplayFor(modelItem => item.Comment)</div>
                                <p class="card__text">
                                    <div>@Html.DisplayFor(modelItem => item.PhoneNumber)</div>
                                    <div>@Html.DisplayFor(modelItem => item.Email)</div>
                                </p>
                            </a>
                        </div>
                    </div>
                </li>
            </a>
        }
    </ul>
</div>

@*Всплывающее окно*@
<div id="modal-wrapper">
    <div id="container" style="width:300px; height:430px;">
        <h1>Новый преподаватель</h1>
        <span class="login__btn--close">×</span>
        <form class="form-group">
            <input class="form-control" type="text" name="name" placeholder="ФИО преподавателя" style="margin-bottom:10px">
            <input class="form-control" type="tel" name="number" placeholder="+ 7 123 456 78 90" style="margin-bottom:10px">
            <input class="form-control" type="email" name="email" placeholder="E-mail" style="margin-bottom:10px">
            <input class="form-control" type="text" name="comment" placeholder="Комментарий" style="margin-bottom:10px">
            <a href="#" class="btn btn-default" style="width:100%; margin-bottom:10px">Загрузить портрет</a>
            <a href="#" class="btn btn-success" style="width:100%; margin-bottom:10px">Сохранить</a>
            <span class="btn btn-danger" style="width:100%">Отмена</span>
        </form>
    </div>
    @*<div class="overlay"></div>*@
</div>

<script src='http://cdnjs.cloudflare.com/ajax/libs/gsap/1.16.1/TweenMax.min.js'></script>
<script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
<script src="~/js/modal.js"></script>