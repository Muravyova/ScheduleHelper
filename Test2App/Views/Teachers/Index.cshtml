@model IEnumerable<ScheduleHelper.Models.DbModels.Teacher>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create" style="float:right" class="btn btn-default">Добавить</a>
</p>
<table border="1" class="table">
    <thead>
        <tr>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            @foreach (var item in Model)
            {
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">
                        <div class="teacher">
                            <div class="name">@Html.DisplayFor(modelItem => item.Name)</div>
                            <div>@Html.DisplayFor(modelItem => item.PhoneNumber)</div>
                            <div>@Html.DisplayFor(modelItem => item.Email)</div>
                            <div>@Html.DisplayFor(modelItem => item.Comment)</div>
                        </div>
                    </a>
                </td>
                <!--<td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>-->
            }
        </tr>
    </tbody>
</table>
