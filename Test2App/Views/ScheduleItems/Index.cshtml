                        <p class="time">@Html.DisplayFor(modelItem => item.StartTime) (@Html.DisplayFor(modelItem => item.Duration) минут)</p>
                        <a asp-action="Details" asp-route-id="@item.Id">
                            <p class="name">@Html.DisplayFor(modelItem => item.Title) (@Html.DisplayFor(modelItem => item.Language.Name))</p>
                        </a>
                        <div class="place">
                            <text id="ch1">@Html.DisplayFor(modelItem => item.Teacher.Name)</text>
                            <text id="ch2">@Html.DisplayFor(modelItem => item.Place.Type)</text>
                        </div>
                        <p class="hidden">@Html.DisplayFor(modelItem => item.Type)</p>
                    </div>
                    }
                }
