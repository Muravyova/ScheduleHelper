@model IEnumerable<ScheduleHelper.Models.DbModels.ScheduleItem>

@{
    ViewData["Title"] = "Расписание";
}

<h2>Расписание</h2>

<p>
    <a asp-action="Create" style="float:right" class="btn btn-default">Добавить</a>
</p>
