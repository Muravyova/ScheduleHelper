@model ScheduleHelper.Models.DbModels.ScheduleItem

@{
    ViewData["Title"] = "Редактировать";
}

<br />
<h4>Занятие</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">Название</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeacherId" class="control-label">Преподаватель:</label>
                <select asp-for="TeacherId" class="form-control" asp-items="ViewBag.Teacher"></select>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label">Начало повторения:</label>
                <input asp-for="StartDate" type="date" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label">Конец повторения:</label>
                <input asp-for="EndDate" type="date" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DayOfWeek" class="control-label">День недели:</label>
                <select asp-for="DayOfWeek" class="form-control" asp-items="ViewBag.DayOfWeek"></select>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label">Время начала занятия:</label>
                <select asp-for="StartTime" class="form-control" asp-items="ViewBag.StartTimes"></select>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label">Длительность (мин):</label>
                <select asp-for="Duration" class="form-control" asp-items="ViewBag.Duration"></select>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label">Тип занятия:</label>
                <select asp-for="Type" class="form-control" asp-items="ViewBag.Type"></select>
            </div>
            <div class="form-group">
                <label asp-for="PlaceId" class="control-label">Место проведения</label>
                <select asp-for="PlaceId" class="form-control" asp-items="ViewBag.Place"></select>
            </div>
            <div class="form-group">
                <label asp-for="LanguageId" class="control-label">Группа</label>
                <select asp-for="LanguageId" class="form-control" asp-items="ViewBag.Language"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-default">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
