@model ScheduleHelper.Models.DbModels.Payment

@{
    ViewData["Title"] = "Details";
}

<h2>Детали</h2>

<div>
    <h4>Оплата</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Дата:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt>
            Сумма:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Pay)
        </dd>
        <dt>
            Количество занятий:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Count)
        </dd>
        <dt>
            Возврат?
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Refund)
        </dd>
        <dt>
            Сумма возврата:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RefundPay)
        </dd>
        <dt>
            Занятие:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ScheduleItem.Title)
        </dd>
        <dt>
            Студент:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Student.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-default">Редактировать</a>
    <a asp-action="Index" class="btn btn-default">Назад</a>
</div>