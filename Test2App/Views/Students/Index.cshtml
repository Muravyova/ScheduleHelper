@model IEnumerable<ScheduleHelper.Models.DbModels.Student>

@{
    ViewData["Title"] = "Студенты";
}

<p>
    <br/>
    <a asp-action="Create">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    ФИО
                </th>
                <th>
                    Телефон
                </th>
                <th>
                    E-mail
                </th>
            <th>
                Кол-во платежей
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Payments.Count)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Детали</a>
            </td>
        </tr>
}
    </tbody>
</table>
