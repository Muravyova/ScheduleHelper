@model ScheduleHelper.Models.DbModels.History

@{
    ViewData["Title"] = "Details";
}

<h2>Детали</h2>

<div>
    <h4>History</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Дата:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt>
            Время:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Time)
        </dd>
        <dt>
            Комментарий:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Comment)
        </dd>
        <dt>
            Занятие:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ScheduleItem.StartTime)
        </dd>
        <dt>
            Студент:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Student.Email)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-default">Редактировать</a>
    <a asp-action="Index" class="btn btn-default">Назад</a>
</div>